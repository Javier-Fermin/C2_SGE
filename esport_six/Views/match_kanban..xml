<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_esports_kanban_tree" model="ir.ui.view">
        <field name="name">view.esports.stats.kanban</field>
        <field name="model">esports.stats</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="image"/>
                <field name="ID"/>
                <field name="Description"/>
                <field name="Played date"/>
                <field name="Winner"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_esports_stats_kanban">
                            <t t-if="record.image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('esports.match', 'image', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="match"/>-<field name="player"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>ID : <field name="team"/></li>
                                    <li>Description : <field name="kills"/></li>
                                    <li>Played date : <field name="deaths"/></li>
                                    <li>Winner : <field name="assists"/></li>
                                    <li>Tournament : <field name="tournament"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>